<Page
    x:Class="ProjectApp1.MainPage2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProjectApp1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Assets/MainPage/city_bridge_rail_fog_blurred_glare_cars_traffic_47826_3840x2160 másolat.jpg"/>
        </Grid.Background>



        <ScrollViewer
                    VerticalScrollBarVisibility="Visible"
                    VerticalScrollMode="Enabled" HorizontalAlignment="Left" Width="459" Margin="56,0,0,0">

            <Grid Name="LoginGrid" Width="461" HorizontalAlignment="Left" Height="1667" Margin="0,0,0,0">
                <Grid.Background>
                    <SolidColorBrush Color="Black" Opacity="0.5"/>
                </Grid.Background>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Button x:Name="button1" Content="Button" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Stretch" Margin="0,0,0,0"  VerticalAlignment="Stretch" d:LayoutOverrides="LeftPosition, RightPosition, TopPosition, BottomPosition"/>
                <Button x:Name="button2" Content="Button" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Stretch" d:LayoutOverrides="LeftPosition, RightPosition, TopPosition, BottomPosition"/>
                <Button x:Name="button3" Content="Button" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Stretch" Margin="0,0,0,0"  VerticalAlignment="Stretch" d:LayoutOverrides="LeftPosition, RightPosition, TopPosition, BottomPosition"/>
                <Button x:Name="button4" Content="Button" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Stretch" Margin="0,0,0,0"  VerticalAlignment="Stretch" d:LayoutOverrides="LeftPosition, RightPosition, TopPosition, BottomPosition"/>
                <Button x:Name="button5" Content="Button" Grid.Column="1" Grid.Row="4" HorizontalAlignment="Stretch" Margin="0,0,0,0"  VerticalAlignment="Stretch" d:LayoutOverrides="LeftPosition, RightPosition, TopPosition, BottomPosition"/>
                <Button x:Name="button6" Content="Button" Grid.Column="1" Grid.Row="5" HorizontalAlignment="Stretch" Margin="0,0,0,0"  VerticalAlignment="Stretch" d:LayoutOverrides="LeftPosition, RightPosition, TopPosition, BottomPosition"/>
                <Button x:Name="button7" Content="Button" Grid.Column="1" Grid.Row="6" HorizontalAlignment="Stretch" Margin="0,0,0,0"  VerticalAlignment="Stretch" d:LayoutOverrides="LeftPosition, RightPosition, TopPosition, BottomPosition"/>
                <Button x:Name="button8" Content="Button" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Stretch" Margin="0,0,0,0"  VerticalAlignment="Stretch" d:LayoutOverrides="LeftPosition, RightPosition, TopPosition, BottomPosition"/>
                <Button x:Name="button9" Content="Button" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Stretch" Margin="0,0,0,0"  VerticalAlignment="Stretch" d:LayoutOverrides="LeftPosition, RightPosition, TopPosition, BottomPosition"/>
                <Button x:Name="button10" Content="Button" Grid.Column="0" Grid.Row="2" HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Stretch" d:LayoutOverrides="LeftPosition, RightPosition, TopPosition, BottomPosition"/>
                <Button x:Name="button11" Content="Button" Grid.Column="0" Grid.Row="3" HorizontalAlignment="Stretch" Margin="0,0,0,0"  VerticalAlignment="Stretch" d:LayoutOverrides="LeftPosition, RightPosition, TopPosition, BottomPosition"/>
                <Button x:Name="button12" Content="Button" Grid.Column="0" Grid.Row="4" HorizontalAlignment="Stretch" Margin="0,0,0,0"  VerticalAlignment="Stretch" d:LayoutOverrides="LeftPosition, RightPosition, TopPosition, BottomPosition"/>
                <Button x:Name="button13" Content="Button" Grid.Column="0" Grid.Row="5" HorizontalAlignment="Stretch" Margin="0,0,0,0"  VerticalAlignment="Stretch" d:LayoutOverrides="LeftPosition, RightPosition, TopPosition, BottomPosition"/>
                <Button x:Name="button14" Content="Button" Grid.Column="0" Grid.Row="6" HorizontalAlignment="Stretch" Margin="0,0,0,0"  VerticalAlignment="Stretch" d:LayoutOverrides="LeftPosition, RightPosition, TopPosition, BottomPosition"/>


            </Grid>
        </ScrollViewer>

        <!--Week offer-->
        <Grid Name="WeekOfferGrid" Margin="595,0,-4,0" d:LayoutOverrides="TopPosition, BottomPosition">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Image Grid.Row="1" Source="Assets/MainPage/download.jpg" Margin="-65,-105.6,10,-0.6" d:LayoutOverrides="LeftPosition, RightPosition, TopPosition, BottomPosition"/>
            <TextBlock x:Name="WeekOfferTextBlock" HorizontalAlignment="Left" Margin="60,84,0,0" TextWrapping="Wrap" Text="Offer of the week" VerticalAlignment="Top" Height="35" Width="265" FontSize="29.333" Foreground="Black"/>
            <TextBlock x:Name="WeekOfferHeaderTextBlock" Margin="-65,37.6,0,0" Grid.Row="2" TextWrapping="Wrap" Text="Lorem Ipsum" VerticalAlignment="Top" Height="35" FontSize="18.667" Foreground="Black" HorizontalAlignment="Left" Width="227"/>
            <TextBlock x:Name="WeekOfferTextTextBlock" Margin="-65,77.6,10,48" Grid.Row="2" Text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Curabitur consectetur ultrices nisl eu dignissim. In commodo blandit ligula, non consectetur ipsum scelerisque vitae. Integer rutrum, dui in efficitur egestas, neque nunc cursus arcu, dignissim tempus erat quam eget nunc. Pellentesque posuere vel purus sed iaculis. Class aptent taciti sociosqu ad litora torquent per conubia nostra, per inceptos himenaeos. Maecenas in nisl gravida, sodales mauris vel, accumsan lectus. Donec ultrices, magna sed consectetur bibendum, lectus odio luctus augue, quis consectetur ex neque quis augue. Mauris rutrum sed lacus sit amet sollicitudin. Aliquam ut eros sed dui ultricies dignissim. Aenean quis odio eleifend, commodo leo id, venenatis urna. Phasellus lacinia, ante laoreet egestas laoreet, ipsum libero volutpat massa, in varius est erat quis ipsum. Duis pulvinar lacinia justo, eget aliquam mi vehicula vitae. Aenean mi leo, consequat iaculis leo ut, facilisis viverra urna. Phasellus tempus pulvinar urna, sed posuere nulla volutpat at. Vivamus aliquam risus ante, eget cursus velit laoreet sit amet. Suspendisse libero turpis, porttitor ac purus id, blandit commodo dolor." d:LayoutOverrides="LeftPosition, RightPosition, TopPosition, BottomPosition" TextWrapping="Wrap" Foreground="Black" />
        </Grid>

        <Grid d:LayoutOverrides="TopPosition, BottomPosition" HorizontalAlignment="Left" Width="56">
            <Grid.Background>
                <SolidColorBrush Color="Black" Opacity="0.5"/>
            </Grid.Background>
        </Grid>

        <!--Sidebar-->
        <Grid HorizontalAlignment="Left" Width="56">
            <Grid.Background>
                <ImageBrush Stretch="Fill"/>
            </Grid.Background>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <RelativePanel>
                <Button Name="HamburgerButton" FontFamily="Segoe MDL2 Assets" Content="&#xE700;" FontSize="36" Click="HamburgerButton_Click" >
                    <Button.Background>
                        <SolidColorBrush Color="Black" Opacity="0.5"/>
                    </Button.Background>
                </Button>
            </RelativePanel>
            <SplitView Name="MySplitView" 
                   Grid.Row="1" 
                   DisplayMode="CompactInline" 
                   OpenPaneLength="200" 
                   CompactPaneLength="56" 
                   HorizontalAlignment="Left">
                <SplitView.PaneBackground>
                    <SolidColorBrush Color="Black" Opacity="0.5"/>
                </SplitView.PaneBackground>
                <SplitView.Pane>
                    <ListBox SelectionMode="Single" 
                         Name="IconsListBox" 
                         SelectionChanged="IconsListBox_SelectionChanged" HorizontalAlignment="Left" Width="200">
                        <ListBox.Background>
                            <SolidColorBrush Color="Black" Opacity="0.25"/>
                        </ListBox.Background>

                        <ListBoxItem Name="HomeListBoxItem">
                            <StackPanel Orientation="Horizontal">
                                <Button Name="Home" Width="28" Height="26" Click="Home_OnClick">
                                    <Button.Background>
                                        <ImageBrush Stretch="UniformToFill" ImageSource="Assets/Icons/HOME grey.png"/>
                                    </Button.Background>

                                </Button>
                            </StackPanel>
                        </ListBoxItem>

                        <ListBoxItem Name="MapListBoxItem">
                            <StackPanel Orientation="Horizontal">
                                <Button x:Name="Map" Width="23" Height="21" Click="Map_OnClick" >
                                    <Button.Background>
                                        <ImageBrush Stretch="Fill" ImageSource="Assets/Icons/map clr.png">
                                            <ImageBrush.RelativeTransform>
                                                <CompositeTransform CenterY="0.5" CenterX="0.5"/>
                                            </ImageBrush.RelativeTransform>
                                        </ImageBrush>
                                    </Button.Background>
                                </Button>
                            </StackPanel>
                        </ListBoxItem>

                        <ListBoxItem Name="RegionsListBoxItem">
                            <StackPanel Orientation="Horizontal">
                                <Button Name="Region" Width="23" Height="21" Click="Region_OnClick" >
                                    <Button.Background>
                                        <ImageBrush Stretch="Fill" ImageSource="Assets/Icons/Regions clr.png">
                                            <ImageBrush.RelativeTransform>
                                                <CompositeTransform CenterY="0.5" CenterX="0.5"/>
                                            </ImageBrush.RelativeTransform>
                                        </ImageBrush>
                                    </Button.Background>
                                </Button>
                            </StackPanel>
                        </ListBoxItem>

                        <ListBoxItem Name="ShareListBoxItem">
                            <StackPanel Orientation="Horizontal">
                                <Button Width="23" Height="21" >
                                    <Button.Background>
                                        <ImageBrush Stretch="Fill" ImageSource="Assets/Icons/share clr.png">
                                            <ImageBrush.RelativeTransform>
                                                <CompositeTransform CenterY="0.5" CenterX="0.5"/>
                                            </ImageBrush.RelativeTransform>
                                        </ImageBrush>
                                    </Button.Background>
                                </Button>
                            </StackPanel>
                        </ListBoxItem>

                        <ListBoxItem Name="SettingsListBoxItem">
                            <StackPanel Orientation="Horizontal">
                                <Button Width="23" Height="21" >
                                    <Button.Background>
                                        <ImageBrush Stretch="Fill" ImageSource="Assets/Icons/Settings clr.png">
                                            <ImageBrush.RelativeTransform>
                                                <CompositeTransform CenterY="0.5" CenterX="0.5"/>
                                            </ImageBrush.RelativeTransform>
                                        </ImageBrush>
                                    </Button.Background>
                                </Button>
                            </StackPanel>
                        </ListBoxItem>

                    </ListBox>
                </SplitView.Pane>
                <SplitView.Content>
                    <TextBlock Name="ResultTextBlock" />
                </SplitView.Content>
            </SplitView>

        </Grid>
    </Grid>
</Page>
